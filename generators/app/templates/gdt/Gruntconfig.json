{
  "srcPaths": {
    "make": "src/project.make.yml",
    "drupal": "src"
  },
  "domain": "project.vm",
  "packages": {
    "srcFiles": ["!sites/*/files/**", "!xmlrpc.php", "!modules/php/*"],
    "projFiles": ["README*", "bin/**"]
  },
  "phpcs": {
    "path": "vendor/bin/phpcs"
  },
  "phpmd": {
    "path": "vendor/bin/phpmd"
  },
  "drush": {
    "cmd": "vendor/bin/drush"
  },
  "behat": {
    "flags": "--tags ~@wip"
  },
  "eslint": true,
  "scripts": {
    "update": "<%= config.drush.cmd %> <%= config.alias %> updatedb -yv"
  }
}
